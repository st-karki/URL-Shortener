{
  "compilerOptions": {
    "target": "esnext", // Modern JS features
    "module": "CommonJS", // Node.js module system
    "lib": ["ESNext"], // Library features included
    "outDir": "./dist", // Compiled JS output folder
    "rootDir": "./src", // Source TS folder
    "strict": true, // Enable all strict checks
    "esModuleInterop": true, // Support default imports from CommonJS
    "forceConsistentCasingInFileNames": true, // Prevent case-related bugs
    "moduleResolution": "node", // Resolve modules like Node.js
    "skipLibCheck": true, // Skip checking libs for faster build
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
